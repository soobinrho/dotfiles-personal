# ------------------------------------------ #
# The default settings from editorconfig-vim
# ------------------------------------------ #

root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = false
max_line_length = off

[*.{vim,sh}]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.rb]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.yml]
indent_style = space
indent_size = 2

[*.{bat,vbs,ps1}]
end_of_line = CRLF

# ------------------------------- #
# Configs that I added personally
# ------------------------------- #
[*.java]
indent_style = space
indent_size = 4
tab_width = 4

[*.java]
indent_style = space
indent_size = 4
tab_width = 4

[*.{html,htm}]
indent_style = space
indent_size = 2
tab_width = 2

[*.{css,?css}]
indent_style = space
indent_size = 2
tab_width = 2

[*.{ts,ats,cts,mts,tsx,cjs,js}]
indent_style = space
indent_size = 4
tab_width = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.tex]
max_line_length = off

[*.vimrc]
indent_style = space
indent_size = 4
tab_width = 4

[{makefile,Makefile}.*]
indent_style = tab
indent_size = 2

[*.json]
indent_style = space
indent_size = 4
tab_width = 4

[*.{cpp,cc,c++,cxx,hpp,c}]
indent_style = space
indent_size = 4

[*.txt]
indent_style = space
indent_size = 4
